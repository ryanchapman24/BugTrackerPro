        }
        @if (User.IsInRole("Admin") || User.IsInRole("Project Manager"))
        {
            <li class="col-md-4 col-sm-12">
                <div class="panel">
                    <div class="panel-body">
                        <h3 class="title-hero">
                            Ticket Breakdown
                        </h3>
                        <div class="example-box-wrapper clearfix">
