@model IEnumerable<BugTrackerPro.Models.CodeFirst.Project>

@{
    ViewBag.Title = "Index";
}

<h2>Project Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Project
        </th>
        <th>
            Description
        </th>
        <th>
            Assigned Users
        </th>
        <th>
            Ticket Count
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <strong>@item.Title</strong><br /><br />
            <em>Created by @item.AuthorFullName</em><br />
            <em>@item.Created</em>
        </td>
        <td>
            @item.Description
        </td>
        <td>
            @foreach (var user in item.Users)
            {
                <p>@user.FullName</p>
            }
        </td>
        <td>
            @item.Tickets.Count
        </td>
        <td>
            @Html.ActionLink("Assignments", "EditProjectAssignments", new { id = item.Id })<br />
            @Html.ActionLink("Details", "Details", new { id=item.Id })<br />
            @Html.ActionLink("Edit", "Edit", new { id=item.Id })<br />
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
