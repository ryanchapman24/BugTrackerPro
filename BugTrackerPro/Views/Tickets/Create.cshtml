@model BugTrackerPro.Models.CodeFirst.Ticket

@{
    ViewBag.Title = "Create";
}

<h2 style="margin-bottom: 20px">Create New Ticket <a href="@Url.Action("Index", "Home")" class="btn btn-black pull-right" title=""><i class="glyph-icon icon-linecons-tag" style="margin-right: 10px"></i>Back to Tickets</a></h2>
<hr />

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()  
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Project</label>
            <div class="col-md-6">
                @Html.DropDownList("ProjectId", null, "", htmlAttributes: new { @class = "form-control", required = "true", style = "height: 34px" })
                @Html.ValidationMessageFor(model => model.ProjectId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Type</label>
            <div class="col-md-6">
                @Html.DropDownList("TicketTypeId", null, "", htmlAttributes: new { @class = "form-control", required = "true", style = "height: 34px" })
                @Html.ValidationMessageFor(model => model.TicketTypeId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Title</label>
            <div class="col-md-6">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", required = "true" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Description</label>
            <div class="col-md-6">
                <textarea class="form-control" name="Description" rows="6" style="width: 100%" required></textarea>
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Priority</label>
            <div class="col-md-6">
                @Html.DropDownList("TicketPriorityId", null, "", htmlAttributes: new { @class = "form-control", required = "true", style = "height: 34px" })
                @Html.ValidationMessageFor(model => model.TicketPriorityId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
